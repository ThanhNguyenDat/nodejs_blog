<div class="mt-4">
    <h3>Edit book</h3>
    <form class="mt-4" method="post" action="/books/{{book._id}}">
        <div class="form-group mt-4">
            <label for="name">Name</label>
            <input type="text" class="form-control" value={{book.name}} id="name" name="name" placeholder="Name">
        </div>
        <div class="form-group mt-4">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3"> {{book.description}} </textarea>
        </div>
        <div class="form-group mt-4">
            <label for="image">Image</label>
            <input type="text" class="form-control" value={{book.image}} id="image" name="image" placeholder="Image">
        </div>
        <button type="submit" class="btn btn-primary mt-4">Update</button>
        </div>
    </form>
</div>
